{
  "language": "ruby",
  "framework": "minitest",
  "testCommand": "ruby run_tests.rb",
  "testPattern": "test/**/*_test.rb",
  "failurePattern": "rails test (.+?):(\\d+)",
  "priority": 1,
  "maxRetries": 3,
  "timeout": 60000,
  "verbose": true,
  "colorOutput": true,
  "testEnvironment": {
    "RAILS_ENV": "test",
    "DISABLE_SPRING": "1"
  },
  "excludePatterns": [
    "test/fixtures/**",
    "test/test_helper.rb"
  ],
  "testSuites": {
    "models": "rails test test/models",
    "controllers": "rails test test/controllers",
    "system": "rails test:system",
    "all": "ruby run_tests.rb"
  }
}