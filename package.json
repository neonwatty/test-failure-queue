{
  "name": "tfq",
  "version": "1.0.8",
  "description": "Multi-language test failure queue manager with multi-language support.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "tfq": "./bin/tfq"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "vitest run tests/unit tests/integration tests/examples",
    "test:all": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:examples": "vitest run tests/examples",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm run lint && npm run test",
    "prepare": "npm run build"
  },
  "keywords": [
    "test",
    "queue",
    "sqlite",
    "cli",
    "failure",
    "multi-language"
  ],
  "author": "Jeremy Watt <jermwatt@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neonwatty/tfq.git"
  },
  "bugs": {
    "url": "https://github.com/neonwatty/tfq/issues"
  },
  "homepage": "https://github.com/neonwatty/tfq#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.85",
    "@types/minimatch": "^5.1.2",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "minimatch": "^10.0.3",
    "tsx": "^4.20.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@vitest/ui": "^3.2.4",
    "tree-kill": "^1.2.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
